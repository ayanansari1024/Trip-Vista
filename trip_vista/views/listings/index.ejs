<% layout('layout') -%>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>All Listings</h2>
  <a href="/listings/new" class="btn btn-success">New Listing</a>
</div>

<form class="row g-2 mb-3" method="get" action="/listings">
  <div class="col-auto">
    <input class="form-control" name="location" placeholder="Search by location" value="<%= search %>">
  </div>
  <div class="col-auto">
    <button class="btn btn-secondary">Search</button>
  </div>
</form>

<div class="row">
  <% listings.forEach(l => { %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <img src="<%= l.images[0] || 'https://via.placeholder.com/600x350?text=Listing' %>" class="card-img-top">
        <div class="card-body d-flex flex-column">
          <h5><%= l.title %></h5>
          <p><%= l.location %></p>
          <p class="mt-auto"><strong>â‚¹<%= l.pricePerNight %></strong> / night</p>
          <a href="/listings/<%= l._id %>" class="btn btn-sm btn-primary mt-2">View</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
